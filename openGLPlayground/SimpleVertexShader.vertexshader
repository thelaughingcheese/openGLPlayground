#version 330 core

// Input vertex data, different for all executions of this shader.
layout(location = 0) in vec3 PosIn;
layout(location = 1) in vec2 UVIn;
layout(location = 2) in vec3 NormalIn;

out vec3 Normal;
out vec2 UV;

uniform mat4 MVP;

void main(){
    gl_Position = MVP * vec4(PosIn,1);
	UV = UVIn;
	Normal = NormalIn;
}

